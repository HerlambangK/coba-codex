generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  CUSTOMER
}

model User {
  id           String              @id @default(cuid())
  email        String              @unique
  name         String?
  password     String
  role         Role                @default(CUSTOMER)
  isVerified   Boolean             @default(false)
  createdAt    DateTime            @default(now())
  updatedAt    DateTime            @updatedAt
  verifications EmailVerification[]
}

model EmailVerification {
  id         String   @id @default(cuid())
  userId     String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  code       String
  expiresAt  DateTime
  usedAt     DateTime?
  createdAt  DateTime @default(now())

  @@index([userId])
  @@index([code])
}

// Simple tumbling window rate limiter
model RateLimit {
  key     String
  window  DateTime
  count   Int      @default(0)

  @@id([key, window])
  @@index([key])
}

