# App
NUXT_APP_NAME=Nuxt Starter
NUXT_PUBLIC_BASE_URL=http://localhost:3000

# Auth
JWT_SECRET=please_change_me
JWT_EXPIRES_IN=7d
VERIFICATION_CODE_TTL_MINUTES=15

# Database
# For local (non-Docker) runs, connect to Postgres on localhost.
# When using Docker Compose, the app container overrides DATABASE_URL to
# postgresql://postgres:postgres@db:5432/appdb?schema=public
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/appdb?schema=public

# SMTP (Mailtrap or local SMTP server)
SMTP_HOST=sandbox.smtp.mailtrap.io
SMTP_PORT=2525
SMTP_USER=your_user
SMTP_PASS=your_pass
SMTP_FROM="Nuxt Starter <no-reply@example.com>"
